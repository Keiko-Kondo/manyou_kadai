<h1>管理者用のユーザー一覧画面だよ！</h1>






<% @users.each do |user| %>
<table class="table table-bordered table-condensed">
  <tr>
    <th>ユーザー名</th>
    <th>タスク数</th>
    <th>詳細</th>
    <th>編集</th>
    <th>削除</th>
  </tr>
  <tbody>
  <tr>
    <td><%= user.id %>:<%= user.name %></td>
    <td><%= user.tasks.count %></td>
    <td><button type="button" class="btn btn-outline-warning"><%= link_to 'Show', admin_user_path(user.id) %></button></td>
    <td><button type="button" class="btn btn-outline-danger"><%= link_to 'Edit', edit_admin_user_path(user.id) %></button></td>
    <td><button type="button" class="btn btn-outline-info"><%= link_to 'Destroy', admin_user_path(user.id), method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
  </tr>
</tbody>
</table>
<% end %>
<%= link_to "ユーザー作成", new_admin_user_path %>
